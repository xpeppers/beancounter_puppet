<VirtualHost *:80>
        ServerName <%= fqdn %>
        DocumentRoot "/opt/demo/current/public"
        LoadModule passenger_module /var/lib/gems/1.9.1/gems/passenger-4.0.27/buildout/apache2/mod_passenger.so
        PassengerRoot /var/lib/gems/1.9.1/gems/passenger-4.0.27
        PassengerRuby /usr/bin/ruby1.9.1
        RailsEnv production

        <Directory /opt/demo/current/public>
                Allow from all
                Options -MultiViews
        </Directory>
</VirtualHost>
