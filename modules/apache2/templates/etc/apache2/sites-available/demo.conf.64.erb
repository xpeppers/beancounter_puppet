<VirtualHost *:80>
        ServerName <%= fqdn %>
        DocumentRoot "/opt/demo/current/public"
        LoadModule passenger_module /usr/local/rvm/gems/ruby-1.9.3-p429/gems/passenger-4.0.27/buildout/apache2/mod_passenger.so
        PassengerRoot /usr/local/rvm/gems/ruby-1.9.3-p429/gems/passenger-4.0.27
        PassengerRuby /usr/local/rvm/bin/ruby
        RailsEnv production

        <Directory /opt/demo/current/public>
                Allow from all
                Options -MultiViews
        </Directory>
</VirtualHost>
