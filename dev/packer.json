{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "source_ami": "ami-9cd00eeb",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "beancounter"
    }
  ],

  "provisioners": [
    {
      "type": "puppet-masterless",
      "manifest-file": "../manifests/init.pp",
      "module_paths": ["../modules"]
    }
    {
      "type": "shell",
      "inline": ["cd /opt/beancounter", "mvn clean install -DskipTests"]
    }
  ]
}
